# Monokai Night color scheme for GNU dircolors
# Configured for ls and other GNU tools

# Monokai Night colors:
# Background: #1f1f1f
# Foreground: #dddddd
# Cyan: #66d9ef
# Green: #a6e22e
# Orange: #fd971f
# Pink: #f92672
# Purple: #ae81ff
# Red: #fe413f
# Yellow: #e6db74

# Basic file types
NORMAL 00                    # normal file
FILE 00                      # regular file
RESET 0                      # reset to normal
DIR 01;38;5;81               # directory (cyan bold)
LINK 38;5;141                # symbolic link (purple)
MULTIHARDLINK 00             # regular file with more than one link
FIFO 38;5;208                # pipe (orange)
SOCK 01;38;5;197             # socket (pink bold)
DOOR 01;38;5;197             # door (pink bold)
BLK 38;5;208;48;5;235        # block device (orange on dark bg)
CHR 38;5;208;48;5;235        # character device (orange on dark bg)
ORPHAN 38;5;203;48;5;235     # orphaned symlink (red on dark bg)
MISSING 38;5;203;48;5;235    # missing file (red on dark bg)
SETUID 37;41                 # setuid file (white on red bg)
SETGID 30;43                 # setgid file (black on yellow bg)
CAPABILITY 00                # file with capability
STICKY_OTHER_WRITABLE 30;42  # sticky+other writable dir
OTHER_WRITABLE 38;5;81;48;5;235  # other writable dir
STICKY 37;44                 # sticky dir
EXEC 01;38;5;112             # executable (green bold)

