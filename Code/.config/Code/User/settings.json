  // === Core Editor Settings ===
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": "'ss01', 'cv03', 'zero'",
  "editor.fontSize": 17,
  "editor.lineHeight": 25,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "off",
  // Ultra minimal editor
  "editor.minimap.enabled": false,
  "editor.glyphMargin": false,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "none",
  "editor.guides.indentation": false,
  "editor.occurrencesHighlight": "off",
  "editor.matchBrackets": "near",
  "editor.stickyScroll.enabled": false,
  "editor.scrollbar.horizontalScrollbarSize": 8,
  "editor.scrollbar.verticalScrollbarSize": 8,
  "editor.bracketPairColorization.enabled": false,
  "editor.colorDecorators": false,
  "editor.parameterHints.enabled": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.mouseWheelZoom": true,
  "editor.accessibilitySupport": "off",
  // Editor behavior
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.snippetSuggestions": "top",
  "editor.quickSuggestionsDelay": 0,
  "editor.quickSuggestions": {
    "comments": true,
    "strings": true,
    "other": true
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  // Go to location settings
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  // === Files ===
  "files.insertFinalNewline": true,
  // === Workbench Settings ===
  "workbench.activityBar.location": "default",
  "workbench.statusBar.visible": false,
  "workbench.editor.showTabs": "single",
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.enablePreview": false,
  "workbench.editor.revealIfOpen": true,
  "workbench.layoutControl.enabled": false,
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.list.horizontalScrolling": true,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  // === Window Settings ===
  "window.commandCenter": false,
  "window.titleBarStyle": "native",
  "window.menuBarVisibility": "toggle",
  "window.title": " ",
  "window.autoDetectColorScheme": true,
  "window.newWindowDimensions": "inherit",
  // === Explorer Settings ===
  "explorer.compactFolders": false,
  "explorer.decorations.badges": false,
  "explorer.openEditors.visible": 1,
  "explorer.confirmPasteNative": false,
  "explorer.incrementalNaming": "smart",
  // === Terminal Settings ===
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.lineHeight": 1.85,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  // === Debug Settings ===
  "debug.console.fontFamily": "JetBrains Mono",
  "debug.console.fontSize": 15,
  "debug.console.lineHeight": 35,
  "debug.toolBarLocation": "docked",
  // === Git/SCM Settings ===
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "scm.diffDecorations": "none",
  "scm.inputFontFamily": "JetBrains Mono",
  // === Diff Editor ===
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  // === Problems ===
  "problems.decorations.enabled": false,
  // === Markdown ===
  "markdown.preview.markEditorSelection": false,
  // === Theme & Icons ===
  "workbench.colorTheme": "Tokyo Night Dark",
  "workbench.productIconTheme": "icons-carbon",
  // === Security ===
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.banner": "never",
  "redhat.telemetry.enabled": false,
  // === Emmet ===
  "emmet.showSuggestionsAsSnippets": true,
  // === Symbols ===
  "symbols.hidesExplorerArrows": false,
  // === Zen Mode ===
  "zenMode.hideLineNumbers": false,
  // === C++ Extension Settings (clangd - recommended) ===
  "clangd.arguments": [
    "--header-insertion=never",
    "--compile-commands-dir=${workspaceFolder}/build",
    "--clang-tidy",
    "--background-index"
  ],
  "clangd.fallbackFlags": [
    "-std=c++20"
